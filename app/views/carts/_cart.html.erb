<div class="cart_title"><%= t('.title') %></div>

<table class="cart">
  <%= render cart.line_items %>

  <tr class="total_line">
    <td colspan="3">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    <td></td>
  </tr>
</table>


<%= button_to t('.checkout'), new_order_path, :method => :get, :disabled => @order.present?? true : false, class: 'button_to' %>
<%= button_to t('.empty'), cart, method: :delete, remote: true, class: 'button_to' %>
