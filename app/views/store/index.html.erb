<% if @counter > 5 %>
  <p>You visited this page (<b><%= pluralize(@counter, 'time') %></b>) since last add product to cart.</p>
<% end %>
<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post %>
    <h3><%= product.title %></h3>
    <%= sanitize( simple_format(product.description) ) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price, unit: 'Â¥') %></span>
      <%= button_to 'Add to Cart', line_items_path(:product_id => product) %>
    </div>
  </div>
<% end %>
